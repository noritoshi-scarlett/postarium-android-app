<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_enabled="false" android:drawable="@color/buttonPrimaryDisabled" >
                <shape android:shape="rectangle"  >
                    <corners android:radius="30dip" />
                    <stroke android:width="1dip" android:color="@color/backgroundRed" />
                    <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
                </shape>
            </item>
            <item android:state_pressed="true" android:state_enabled="true" android:drawable="@color/buttonActive" >
                <shape android:shape="rectangle"  >
                    <corners android:radius="30dip" />
                    <stroke android:width="1dip" android:color="@color/backgroundRed" />
                    <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
                </shape>
            </item>
            <item android:state_focused="true" android:state_enabled="true" android:drawable="@color/buttonActive" >
                <shape android:shape="rectangle"  >
                    <corners android:radius="30dip" />
                    <stroke android:width="1dip" android:color="@color/backgroundRed" />
                    <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
                </shape>
            </item>
            <item android:state_enabled="true" android:drawable="@color/buttonPrimary" >
                <shape android:shape="rectangle"  >
                    <corners android:radius="30dip" />
                    <stroke android:width="1dip" android:color="@color/backgroundRed" />
                    <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
                </shape>
            </item>
    </selector>
