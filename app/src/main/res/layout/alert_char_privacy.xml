<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_desc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textLink"
            android:paddingBottom="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_forum"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textLink"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_login_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingTop="0dp"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_login_desc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:textColor="@color/textLink"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_password_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingTop="0dp"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:text="@string/circle_char_privacy_password_desc"/>

    </LinearLayout>

</ScrollView>