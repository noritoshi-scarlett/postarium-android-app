<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textAttention"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/textPrimary"
            android:textSize="12sp"
            android:text="@string/circle_char_attention"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/textLink"
            android:text="@string/circle_char_forum"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinnerForumLists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:popupBackground="@color/buttonPrimary" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/spinnerTextDesc"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:paddingStart="6dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/textPrimary"
            android:textSize="10sp"
            android:text="@string/circle_char_forum_desc"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textLink">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/editCharLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textLink"
                android:hint="@string/circle_char_login" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textLink">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/editCharPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textLink"
                android:hint="@string/circle_char_password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textLink">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/editCharTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textLink"
                android:hint="@string/circle_char_tag" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchCharVisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:text="@string/circle_char_visible_title"
            android:textColor="@color/textLink" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginStart="6dp"
            android:textSize="12sp"
            android:text="@string/circle_char_visible_desc"
            android:textColor="@color/textPrimary"
            android:id="@+id/textCharVisible"
            android:layout_gravity="center_horizontal" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkCharDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:switchPadding="10dp"
            android:text="@string/circle_char_delete_title"
            android:textColor="@color/textLink" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginStart="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/circle_char_delete_desc"
            android:textColor="@color/textPrimary"
            android:id="@+id/textCharDelete"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>

