<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingStart="0dp"
    android:paddingEnd="1dp"
    android:paddingBottom="1dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="5dp"
    android:background="@color/transparent">

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:id="@+id/recordBtnCat"
        android:drawableEnd="@drawable/icon_forum_arrow_right_c48"
        android:background="@color/transparent"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:minHeight="46dp"
        android:textSize="14sp"
        android:text=""
        android:id="@+id/recordBtnPost"
        android:textColor="@color/textPrimary"
        android:background="@drawable/button_primary_transparent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:padding="3dp"
        android:layout_toEndOf="@id/recordBtnCat"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textPrimary"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:id="@+id/recordText"
        android:layout_marginStart="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@id/recordBtnPost"
        android:layout_centerInParent="true"
        android:background="@color/transparentPrimaryLight"/>

</RelativeLayout>