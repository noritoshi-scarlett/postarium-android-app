<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingStart="0dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="3dp"
    android:background="@color/transparentHalfLight">

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:id="@+id/recordBtnCat"
        android:drawableEnd="@drawable/icon_forum_arrow_right_c48"
        android:background="@color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/recordBtnCat"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recordBtnPost"
            android:textColor="@color/textPrimary"
            android:background="@drawable/button_primary_transparent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordTextLandscape"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:background="@color/transparentPrimaryLight"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textPrimary"
            android:textAlignment="textEnd" />

    </LinearLayout>

</RelativeLayout>