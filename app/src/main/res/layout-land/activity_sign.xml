<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1200"
    android:gravity="fill_horizontal|center_vertical|center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/backgroundBlueTransparent"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/linearLayout">

        <ImageView android:src="@drawable/postarium_logo_120"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:contentDescription="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|center_vertical|center_horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:minWidth="260dp"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textLink">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textLink"
                    android:hint="@string/give_email" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:minWidth="260dp"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textLink">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textLink"
                    android:hint="@string/give_password" />
            </android.support.design.widget.TextInputLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="@string/sign_in"
                    android:id="@+id/signOk"
                    android:layout_gravity="fill_horizontal|center_horizontal"
                    android:textColor="@color/textPrimary"
                    android:background="@drawable/button_success_transparent"
                    android:padding="10dp"
                    android:enabled="false"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_row="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/sign_up"
                    android:id="@+id/signUp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textPrimary"
                    android:background="@drawable/button_primary_transparent"
                    android:padding="10dp"
                    android:enabled="true"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sign_about"
                    android:id="@+id/signAbout"
                    android:background="@drawable/button_primary_transparent"
                    android:textColor="@color/textPrimary"
                    android:padding="10dp"
                    android:enabled="true"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
            </GridLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>